<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/hdrpic"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="303dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="397dp"
        android:layout_x="61dp"
        android:layout_y="290dp"
        android:background="@drawable/roundedbuttons"
        android:fontFamily="@font/numans"
        android:text="HDR"
        android:textColor="@color/blue"
        android:textSize="15sp"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="277dp" />

    <Button
        android:id="@+id/enhancedimage"
        android:layout_width="303dp"
        android:layout_height="45dp"
        android:layout_alignStart="@+id/hdrpic"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="299dp"
        android:layout_x="61dp"
        android:layout_y="290dp"
        android:background="@drawable/roundedbuttons"
        android:fontFamily="@font/numans"
        android:text="Enhance Mode"
        android:textColor="@color/blue"
        android:textSize="15sp"
        android:typeface="normal"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="277dp" />

    <Button
        android:id="@+id/ultraenhance"
        android:layout_width="303dp"
        android:layout_height="45dp"
        android:layout_alignStart="@+id/hdrpic"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-1dp"
        android:layout_marginBottom="200dp"
        android:layout_x="61dp"
        android:layout_y="290dp"
        android:background="@drawable/roundedbuttons"
        android:fontFamily="@font/numans"
        android:text="Ultra Enhance Mode"
        android:textColor="@color/blue"
        android:textSize="15sp"
        android:typeface="normal"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="277dp" />

</RelativeLayout>